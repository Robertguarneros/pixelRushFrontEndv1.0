<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/WelcomeUser"
        android:layout_width="253dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:textSize="35dp"
        android:textStyle="bold|italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonUserInformation"
        android:layout_width="319dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/Nami_Tangerine"
        android:onClick="goToProfile"
        android:text="User Info"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonStore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.979"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonStore"
        android:layout_width="319dp"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        android:backgroundTint="@color/Nami_Tangerine"
        android:onClick="goToStore"
        android:text="Store"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.594"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="logout"
        android:text="Logout"
        android:backgroundTint="@color/Nami_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonStore"
        app:layout_constraintVertical_bias="0.302" />

    <Button
        android:id="@+id/questionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Nami_dark"
        android:onClick="goToAskAQuestion"
        android:text="Ask a Question"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogout" />
</androidx.constraintlayout.widget.ConstraintLayout>